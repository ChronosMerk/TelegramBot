# ğŸ³ Docker
up:
	cd Docker && docker-compose up -d --build

down:
	cd Docker && docker-compose down

logs:
	cd Docker && docker-compose logs -f bot

bash:
	docker exec -it telegram_bot sh

clean:
	docker system prune -a -f

# ğŸ“ Ğ›Ğ¾Ğ³Ğ¸
